# PostgreSQL Configuration
POSTGRES_USER=recipeflow
POSTGRES_PASSWORD=recipeflow_dev
POSTGRES_DB=recipeflow
POSTGRES_PORT=5432

# Database URL for application
DATABASE_URL=postgresql://recipeflow:recipeflow_dev@localhost:5432/recipeflow

# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-jwt-secret-min-32-characters-long-change-this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-min-32-characters-long-change-this
COOKIE_DOMAIN=localhost

# Discord OAuth
# Create an application at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3001/auth/discord/callback

# Upload & Storage Configuration
UPLOAD_DIR=./uploads
ICON_DIR=./uploads/icons
ICON_BASE_URL=/icons
MAX_UPLOAD_SIZE=209715200

# External APIs (optional - for manifest verification)
# Get a CurseForge API key at https://console.curseforge.com/
# CURSEFORGE_API_KEY=your-curseforge-api-key
MODRINTH_API_URL=https://api.modrinth.com/v2
